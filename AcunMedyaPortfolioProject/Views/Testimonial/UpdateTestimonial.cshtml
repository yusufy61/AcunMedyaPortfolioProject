@model AcunMedyaPortfolioProject.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncelle</h2>

<div class="container">
    <form method="post">
        <label>İsim Soyisim</label>
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
        <br />
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title , new { @class = "form-control" })
        <br />
        <label>Resim Adresi</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        <br />
        <label>Yorum</label>
        @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Güncelle</button>
    </form>
</div>